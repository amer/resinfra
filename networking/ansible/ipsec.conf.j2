config setup
    charondebug="ike 2, knl 2, cfg 2, net 2, esp 2, dmn 2, mgr 2"
    strictcrlpolicy=no
    uniqueids=yes
    cachecrls=no

conn ipsec-ikev2-vpn
    auto=start
    compress=no
    type=tunnel
    keyexchange=ikev2
    authby=secret
    left=135.181.152.52 #${my_ip_address}
    leftsubnet=10.0.1.0/24 #${local_cidr}
    right=40.112.164.128 #${remote_ip_address}
    rightsubnet=10.1.0.0/16 #${remote_cidr}
    ike=aes256-sha1-modp1024 # tested for azure
    aggressive=no
    keyingtries=%forever
    ikelifetime=28800s
    lifetime=3600s
    dpddelay=30s
    dpdtimeout=120s
    dpdaction=restart