config setup
    protostack=netkey

conn mytunnel
    # needed?
    esp=aes_gcm256-null,aes_gcm128-null,aes256-sha2_512,aes128-sha2_512
    ikev2=insist
    left={{public_gateway_ip}}
    leftsubnet={{local_cidr}}
